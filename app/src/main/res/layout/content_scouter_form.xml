<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_scouter_form" tools:context=".ScouterFormActivity" android:padding="8dp">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Starting item"
              android:layout_gravity="center" android:textSize="18sp"/>

    <info.hoang8f.android.segmented.SegmentedGroup
            xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
            android:id="@+id/segmented2" android:layout_width="match_parent" android:layout_height="42dp"
            android:gravity="center" android:layout_margin="10dp" android:orientation="horizontal"
            segmentedgroup:sc_border_width="2dp" segmentedgroup:sc_corner_radius="10dp" android:layout_marginTop="8dp"
            segmentedgroup:layout_constraintTop_toTopOf="parent" tools:layout_editor_absoluteX="10dp">

        <RadioButton android:id="@+id/button21" android:layout_width="wrap_content" android:layout_height="match_parent"
                android:layout_weight="1" android:text="Ball" style="@style/RadioButton"/>

        <RadioButton android:id="@+id/button22" android:layout_width="wrap_content" android:layout_height="match_parent"
                android:layout_weight="1" android:text="Disc" style="@style/RadioButton"/>

        <RadioButton android:id="@+id/button23" android:layout_width="wrap_content" android:layout_height="match_parent"
                android:layout_weight="1" android:text="Nothing" style="@style/RadioButton"/>

    </info.hoang8f.android.segmented.SegmentedGroup>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Starting position"
              android:layout_gravity="center" android:textSize="18sp"/>

    <info.hoang8f.android.segmented.SegmentedGroup
            xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
            android:id="@+id/segmented3" android:layout_width="match_parent" android:layout_height="42dp"
            android:gravity="center" android:layout_margin="10dp" android:orientation="horizontal"
            segmentedgroup:sc_border_width="2dp" segmentedgroup:sc_corner_radius="10dp" android:layout_marginTop="8dp"
            segmentedgroup:layout_constraintTop_toTopOf="parent" tools:layout_editor_absoluteX="10dp">

        <RadioButton android:id="@+id/button31" android:layout_width="wrap_content" android:layout_height="match_parent"
                android:layout_weight="1" android:text="Left" style="@style/RadioButton"/>

        <RadioButton android:id="@+id/button32" android:layout_width="wrap_content" android:layout_height="match_parent"
                android:layout_weight="1" android:text="Center" style="@style/RadioButton"/>

        <RadioButton android:id="@+id/button33" android:layout_width="wrap_content" android:layout_height="match_parent"
                android:layout_weight="1" android:text="Right" style="@style/RadioButton"/>

    </info.hoang8f.android.segmented.SegmentedGroup>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Notes"
              android:layout_gravity="center" android:textSize="18sp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText"/>


</LinearLayout>